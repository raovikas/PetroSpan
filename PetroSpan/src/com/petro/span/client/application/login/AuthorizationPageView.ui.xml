<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.petro.span.client.resources.Resources"
		field="res"></ui:with>

	<ui:style>
	.sessionLabel{
	  color: red;
	}
	</ui:style>

	<g:LayoutPanel styleName="{res.style.pageBackgroundView}"
		ui:field="loginpageLayout">

		
		
		<!--  
		<g:layer left="45%" width="0%" top="10%" height="0%">
			<g:InlineHTML   ui:field="sessionExpireLabel"   styleName="{res.style.loginwrap} {style.sessionLabel}" horizontalAlignment="ALIGN_CENTER">
				You Session is Expired 
			</g:InlineHTML>
		</g:layer> -->

		<g:layer left="10%" width="30%" top="30%" height="60%">
			<g:Image resource="{res.Bg_logo}" styleName="{res.style.imgLogo}"></g:Image>
		</g:layer>
		
		<g:layer left="45%" width="26%" top="17%" height="3%">



			<g:SimpleLayoutPanel ui:field="messageDisplayPanel">
            
			</g:SimpleLayoutPanel>


		</g:layer>

		<g:layer left="45%" width="26%" top="20%" height="54%">

			

			<g:LayoutPanel styleName="{res.style.loginwrap}"
				ui:field="loginFormLayout">
				<g:layer left="35%" top="5%" height="30%" width="30%">
					<g:Image resource="{res.user}" styleName="{res.style.imgLogo}"></g:Image>
				</g:layer>

				<g:layer left="13%" top="40%" height="10%" width="74%">
					<g:TextBox ui:field="userName" width="250px" height="25px"
						styleName="{res.style.imgLogo}" />
				</g:layer>

				<g:layer left="13%" top="55%" height="10%" width="74%">
					<g:PasswordTextBox ui:field="password" width="250px"
						height="25px" styleName="{res.style.imgLogo}" />
				</g:layer>

				<g:layer left="13%" top="70%" height="10%" width="74%">
					<g:Button ui:field="loginButton" text="Login"
						styleName="{res.style.loginButton} {res.style.imgLogo} " width="255px"
						height="30px" />
				</g:layer>

				<g:layer left="13%" top="85%" height="10%" width="74%">
					<g:InlineHyperlink ui:field="inlineHyperlink">Not a member ?
						Join now</g:InlineHyperlink>
				</g:layer>
			</g:LayoutPanel>

		</g:layer>





	</g:LayoutPanel>




</ui:UiBinder>