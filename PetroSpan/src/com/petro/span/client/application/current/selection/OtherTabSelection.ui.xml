<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.selection {
		background-color: #FFF1DD;
	}
	.labelStyle{
		background-color: #FF9900;

	}
	</ui:style>
	
	
	<g:LayoutPanel>
		<g:layer left="0%" width="100%" height="20%" top="0%">
			<g:InlineLabel  ui:field="inlineLabel" stylePrimaryName="{style.labelStyle}" horizontalAlignment="ALIGN_CENTER"> Current Selections
			</g:InlineLabel>
		
		</g:layer>
		<g:layer left="0%" width="99%" height="80%" top="20%">


			<!-- <g:CaptionPanel captionHTML="Current Selection" ui:field="captionPanel"> -->
			<g:ScrollPanel ui:field="scrollPanel">
				<g:Grid ui:field="selectionGrid"/>
			</g:ScrollPanel>



		</g:layer>
	</g:LayoutPanel>
	
</ui:UiBinder> 